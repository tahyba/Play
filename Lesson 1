# Task 5

First_number =int(input("Enter the 1st integer value "))
Second_number =int(input("Enter the 2nd integer value "))

print("Enter a for addition")
print("Enter b for subtraction")
print("Enter c for Multiplication")
print("Enter d for Division")
print("Enter e for Modulo")
print("Enter f for Root of")

Sign= str(input("Enter the choice :"))

if Sign=="a":
print("Addition", First_number+Second_number)
elif Sign=="b":
print("Subtraction", First_number-Second_number)
elif Sign=="c":
print("Multiplication", First_number*Second_number)
elif Sign=="d":
print("Division", First_number/Second_number)
elif Sign=="e":
print("Modulo", First_number//Second_number)
elif Sign=="f":
print("Power to", First_number**Second_number)
else:
print("Please try again")
